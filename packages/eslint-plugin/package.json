{
  "name": "@eslint-react/eslint-plugin",
  "version": "0.7.0",
  "description": "ESLint plugin for React function components with TypeScript, built (mostly) from scratch.",
  "keywords": [
    "eslint",
    "eslint-plugin",
    "eslint-react",
    "react",
    "ts",
    "tsx",
    "typescript",
    "typescript-eslint",
    "typescript-react"
  ],
  "homepage": "https://github.com/eslint-react/eslint-react",
  "bugs": {
    "url": "https://github.com/eslint-react/eslint-react/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eslint-react/eslint-react.git",
    "directory": "packages/eslint-plugin"
  },
  "license": "MIT",
  "author": "Eva1ent<let@ik.me>",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "./dist",
    "./package.json"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin swc3 && cp dist/index.d.ts dist/index.d.mts",
    "lint:publish": "pnpm publint && cd ../.. && pnpm run test",
    "lint:type": "bun run --bun tsc --noEmit",
    "publish": "pnpm run build && pnpm run lint:publish"
  },
  "dependencies": {
    "@typescript-eslint/type-utils": "6.9.1",
    "@typescript-eslint/types": "6.9.1",
    "@typescript-eslint/utils": "6.9.1"
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin-debug": "workspace:*",
    "@eslint-react/eslint-plugin-hooks": "workspace:*",
    "@eslint-react/eslint-plugin-jsx": "workspace:*",
    "@eslint-react/eslint-plugin-naming-convention": "workspace:*",
    "@eslint-react/eslint-plugin-react": "workspace:*",
    "@eslint-react/tools": "workspace:*",
    "@eslint-react/types": "workspace:*",
    "string-ts": "1.3.2"
  },
  "peerDependencies": {
    "@typescript-eslint/parser": ">=6.9.1",
    "eslint": ">=8.53.0",
    "typescript": ">=5.2.2"
  },
  "engines": {
    "bun": ">=1.0.8",
    "node": ">=18.15.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
